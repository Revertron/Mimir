<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mimir" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_60</item>
        <item name="colorPrimaryVariant">@color/gray_40</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:toolbarStyle">@style/MimirToolbar</item>
        <item name="textEditBackgroundColor">@color/light_gray</item>
        <item name="textEditTextColor">@color/dark_gray</item>
        <item name="chatBackgroundColor">@color/light_gray</item>
        <item name="iconColor">@color/black</item>
        <item name="unreadBadgeBackColor">@color/gray_80</item>
        <item name="unreadBadgeColor">@color/white</item>

        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="actionOverflowButtonStyle">@style/MimirToolbarOverflowStyle</item>
        <!--<item name="toolbarStyle">@style/MimirToolbar</item>-->
    </style>

    <style name="MimirToolbar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/teal_200</item>
        <item name="colorControlNormal">@color/black</item>
    </style>
    
    <style name="MimirToolbarOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/black</item>
    </style>

    <style name="EditTextStyle"  parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_rounded</item>
        <item name="android:textColor">?attr/textEditTextColor</item>
        <!--<item name="android:textCursorDrawable">@null</item>-->
    </style>

</resources>