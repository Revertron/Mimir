<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/reactions_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp"
        android:elevation="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?attr/colorSurface">
        <!-- Emoji reaction row -->
        <LinearLayout
            android:id="@+id/emoji_row"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/emoji_thumbsup"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ‘"
                android:textSize="22sp"
                android:background="@drawable/contact_background" />

            <TextView
                android:id="@+id/emoji_heart"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="â¤ï¸"
                android:textSize="22sp"
                android:background="@drawable/contact_background" />

            <TextView
                android:id="@+id/emoji_fire"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ”¥"
                android:textSize="22sp"
                android:background="@drawable/contact_background" />

            <TextView
                android:id="@+id/emoji_laugh"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ˜‚"
                android:textSize="22sp"
                android:background="@drawable/contact_background" />

            <TextView
                android:id="@+id/emoji_surprised"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ˜®"
                android:textSize="22sp"
                android:background="@drawable/contact_background" />

            <TextView
                android:id="@+id/emoji_sad"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ˜¢"
                android:textSize="22sp"
                android:background="@drawable/contact_background" />

            <TextView
                android:id="@+id/emoji_angry"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ˜¡"
                android:textSize="22sp"
                android:background="@drawable/contact_background" />

            <TextView
                android:id="@+id/emoji_crap"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ’©"
                android:textSize="22sp"
                android:background="@drawable/contact_background" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/transparent"
        android:alpha="0.3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp"
        android:elevation="8dp"
        android:background="?attr/colorSurface"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:background="?attr/colorSurface"
            android:minWidth="180dp">

            <LinearLayout
                android:id="@+id/menu_reply"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/contact_background"
                android:clickable="true"
                android:focusable="true"
                android:duplicateParentState="false">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_reply"
                    android:tint="?attr/colorOnSurface"
                    android:layout_marginEnd="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_reply"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_copy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/contact_background"
                android:clickable="true"
                android:focusable="true"
                android:duplicateParentState="false">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_copy"
                    android:tint="?attr/colorOnSurface"
                    android:layout_marginEnd="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_copy"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_forward"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/contact_background"
                android:clickable="true"
                android:focusable="true"
                android:duplicateParentState="false">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_forward"
                    android:tint="?attr/colorOnSurface"
                    android:layout_marginEnd="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_forward"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_save"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/contact_background"
                android:clickable="true"
                android:focusable="true"
                android:duplicateParentState="false">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_folder_download_outline"
                    android:tint="?attr/colorOnSurface"
                    android:layout_marginEnd="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_save"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_delete"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/contact_background"
                android:clickable="true"
                android:focusable="true"
                android:duplicateParentState="false">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:tint="?attr/colorOnSurface"
                    android:layout_marginEnd="16dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_delete"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>